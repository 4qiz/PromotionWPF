<Window x:Class="PromotionWPF.Pages.PromotionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PromotionWPF.Pages"
        mc:Ignorable="d"
        Title="PromotionWindow" Height="450" Width="800">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="promotionDataGrid" Grid.Row="0"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Style="{StaticResource MainButtonTheme}" Content="Add" x:Name="addButton"/>
            <Button Style="{StaticResource MainButtonTheme}" Content="delete" x:Name="deleteButton"/>
            <Button Style="{StaticResource MainButtonTheme}" Content="show" x:Name="showButton"/>
        </StackPanel>
       
    </Grid>
</Window>
